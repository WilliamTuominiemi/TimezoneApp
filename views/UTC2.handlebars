<div class="time">

    <h2>Time in UTC +2</h2>
    <p> Finland &#127467;&#127470;</p>

    <script>
        const offset='+2'

        var d = new Date();

        var utc = d.getTime() + (d.getTimezoneOffset() * 60000);

        var nd = new Date(utc + (3600000*offset));
                
        const time = `${nd.getHours()}:${(nd.getMinutes()<10?'0':'') + nd.getMinutes()}`

        const txt = time.toLocaleString()

        document.write(txt.fontcolor("white").fontsize(10));
    </script>

    
</div>


